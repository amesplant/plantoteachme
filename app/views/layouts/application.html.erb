<!DOCTYPE html>
<html>
  <head>
    <title>Plan to Teach</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Cormorant|Raleway|Catamaran|Droid+Sans|Kanit' %>
  </head>

  <body>
    <header>
      <div class="header-container">
        <div class="header-menu">
          <%= link_to root_path do %>
            <div class="logo">
              plantoteach
            </div>
          <% end %>


          <ul class="topnav" id="myTopnav">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'Contact', root_path %></li>
            <li><%= link_to 'Blog', posts_path %></li>

            <li class="icon">
              <a href="javascript:void(0);" onclick="myFunction()">&#9776;</a>
            </li>
          </ul>


        </div>
        <div class="computer"></div>
      </div>
    </header>
    <div class="secondary-menu">
      <%= link_to '', root_path, class: "contact" %>
    </div>

    <%= yield %>

    <footer>
      <div class="row">
        <div class="logo">

        </div>
      </div>
    </footer>
  </body>
</html>
